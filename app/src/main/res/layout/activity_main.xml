<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domek w górach"
            android:textSize="26sp"
            android:textColor="#000000"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/obraz"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#008080">

            <Button
                android:id="@+id/lajk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="POLUB"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008080" />
            <Button
                android:id="@+id/unlajk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USUŃ"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008080" />

            <Button
                android:id="@+id/zapisz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ZAPISZ"
                android:textColor="#FFFFFF"
                android:backgroundTint="#008080" />

        </LinearLayout>

        <TextView
            android:id="@+id/liczniklajkow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 polubień"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textStyle="bold"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych"
            android:textColor="#808080"
            android:padding="10dp" />

    </LinearLayout>
